<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ParsingMemo">


    <LinearLayout
        android:id="@+id/firstLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp">
        <EditText
            android:id="@+id/parsing_title_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="제목"
            android:inputType="text"
            android:maxLines="1" />

        <EditText
            android:id="@+id/parsing_contents_edit"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/edit_memo"
            android:gravity="top"
            android:hint="내용"
            android:inputType="textMultiLine|textNoSuggestions"
            android:padding="8dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/secondLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/firstLayout"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/date_layout"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_margin="5dp"
            android:background="@drawable/clickevent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/parsingDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4월 14일"
                android:textColor="#000000"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/parsingTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오후 7시 35분"
                android:textColor="#000000"
                android:textSize="24sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <FrameLayout
                android:id="@+id/parsing_map_fragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                    android:name="com.google.android.gms.maps.MapFragment"
                    android:id="@+id/parsing_map"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </FrameLayout>
            <TextView
                android:id="@+id/parsing_map_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:maxWidth="150dp"
                android:text="TextView"/>
        </LinearLayout>



    </LinearLayout>
    <Button
        android:id="@+id/save_parsing_memo_but"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="저장"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"/>


</RelativeLayout>